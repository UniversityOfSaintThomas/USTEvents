<apex:page id="UGEventRegistrationOptions" showHeader="false" sidebar="false" standardStylesheets="false" docType="html-5.0" controller="UGEventRegistrationOptionsController">
    <apex:composition template="CastorTemplate2017">
        <apex:define name="pageTitle"><a href="/applicantportal/UGEvent">Events</a></apex:define>
        <apex:define name="afterJquery">
            <link href="{!URLFOR($Resource.UGEventStyles)}" rel="stylesheet" type="text/css"/>
            <script src="{!URLFOR($Resource.UGEventsRegistrationOptionScripts)}" type="text/javascript"/>
            <script src="//static.stthomas.edu/undergraduate-admissions/js/chosen/chosen.ust.jquery.min.js" type="text/javascript"/>
        </apex:define>
        <apex:define name="sectionNav">
            <li>
                <apex:outputLink value="{!$Page.UGEvent}">Event Calendar</apex:outputLink>
            </li>
            <!--
            <li>
                <apex:outputLink value="{!$Page.Home_Page}">Home</apex:outputLink>
            </li>
            <li>
                <apex:outputLink value="{!$Page.ScholarshipHome}">Scholarship List</apex:outputLink>
            </li>
            <li>
                <apex:outputLink value="{!$Page.MyProfile}">My Profile</apex:outputLink>
            </li>
            <li>
                <apex:outputLink value="{!$Page.MyApplication}">My Applications</apex:outputLink>
            </li>
            -->
        </apex:define>
        <apex:define name="body">
            <div class="row">
                <div class="columns errorMessages">
                    <apex:messages />
                    <apex:outputText escape="false" value="{!test}"/>
                </div>
            </div>
            <apex:form id="UGRegistraterOptionForm" html-data-abide="ajax" html-novalidate="novalidate">
                <div class="row">
                    <div class="column">
                        <h2>
                            <apex:outputText escape="false" value="{!eventPage.Event_Appointment_Title__c}"/>
                        </h2>
                        <p>
                            <apex:outputText escape="false" value="{!eventPage.Event_Appointment_Description__c}"/>
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="columns small-12 menium-6 large-6">
                        <h4>Choose appointments</h4>
                        <div id="chooser">
                            <apex:outputText escape="false" value="{!apptFormatted}"/>
                        </div>
                    </div>
                    <div class="columns small-12 menium-6 large-6">
                        <h4>Selected appointments</h4>
                        <div id="choosen">
                            <apex:outputText escape="false" value="{!chosenFormatted}"/>
                        </div>
                        <p>&nbsp;</p>
                        <p><em>Once you have selected all your appointments click next.</em></p>
                        <p>
                            <apex:commandLink action="{!saveOptions}" onClick="return populateApptJSON();" Value="Next" id="submitOptions" styleClass="button confirmContinue"/>
                            <apex:commandLink action="{!previousPage}" onClick="" Value="Previous" id="previousPage" styleClass="button previous"/>
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="column">
                        <p>
                            <apex:outputText escape="false" value="{!EventPage.Event_Footer__c}"></apex:outputText>
                        </p>
                    </div>
                </div>
                <apex:inputHidden id="outgoingApptJSon" value="{!incomingApptJSon}"/>
            </apex:form>
        </apex:define>
    </apex:composition>

</apex:page>